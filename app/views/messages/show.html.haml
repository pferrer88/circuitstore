- model_class = @message.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @message.name
%p
  %strong= model_class.human_attribute_name(:company) + ':'
  %br
  = @message.company
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @message.email
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @message.comment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), messages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_message_path(@message), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), message_path(@message), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
